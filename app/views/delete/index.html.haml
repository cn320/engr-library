%h2{:style=>'text-align: center'} Search book
%form{ :controller => 'delete', :action => 'index', :method => 'get' }
  %table{ :border => 0, :width => "100%", :height => "100%" }
    %tr{ :align => "center", :valign => "center" }
      %td
        %label BOOK NAME :
        =text_field_tag  :bookname, params[:bookname], :value=> @bookName
    %tr{ :align => "center", :valign => "center" }
      %td
        %label BOOK ID :
        =text_field_tag  :bookid, params[:bookid], :value=> @bookId
    %tr{ :align => "center", :valign => "center" }
      %td
        %label BOOK BARCODE :
        =text_field_tag  :bookbarcode, params[:bookbarcode], :value=> @bookBarcode
    %tr{ :align => "center", :valign => "center" }
      %td
        %input{ :type => "submit", :name => "submit", :value => "search" }

  
%table{ :border => 0, :width => "100%", :height => "100%" }
  %h2{:style=>'text-align: center'} Listing Books
  %thead
    %tr{ :align => "center", :valign => "center" }
      %td
        %label Title
      %td
        %label BarCode
      %td
        %label BookID
      %td
        %label Remove
  %tbody
  - @books.each do |book| 
    %tr{ :align => "center", :valign => "center" }
      %td= book.name
      %td= book.barcode
      %td= book.callnum
      %td= button_to "Remove", delete_show_path(:id => book)

